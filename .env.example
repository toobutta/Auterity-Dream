# WARNING: Change all default credentials and tokens before deploying to production
# Database Configuration
POSTGRES_DB=auterity
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password_change_me

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Security
SECRET_KEY=your_secret_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Environment
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Service URLs
RELAYCORE_URL=http://relaycore:3001
NEUROWEAVER_BACKEND_URL=http://neuroweaver-backend:8001

# External URLs (for frontend)
EXTERNAL_AUTMATRIX_BACKEND_URL=http://localhost:8000
EXTERNAL_RELAYCORE_URL=http://localhost:3001
EXTERNAL_NEUROWEAVER_FRONTEND_URL=http://localhost:3002
EXTERNAL_NEUROWEAVER_BACKEND_URL=http://localhost:8001

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Qdrant Configuration
# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch:9200

QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Vault Configuration
VAULT_ROOT_TOKEN=dev-token
VAULT_URL=http://vault:8200
VAULT_TOKEN=dev-token

# Message Queue
RABBITMQ_PASSWORD=secure_rabbitmq_password_change_me

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password_change_me

# Communication Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# RelayCore Configuration
RELAYCORE_DEFAULT_MODEL=gpt-3.5-turbo
RELAYCORE_COST_THRESHOLD=10.00
RELAYCORE_ENABLE_STEERING=true

# NeuroWeaver Configuration
NEUROWEAVER_MODEL_STORAGE_PATH=/app/models
NEUROWEAVER_TRAINING_ENABLED=true
NEUROWEAVER_AUTO_DEPLOY=false

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:postgres@postgres:5432/workflow_engine
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://mlflow-artifacts
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
