# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/workflow_engine
POSTGRES_DB=workflow_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration (Shared across all systems)
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Service URLs (Internal Docker Network)
AUTMATRIX_BACKEND_URL=http://backend:8000
AUTMATRIX_FRONTEND_URL=http://frontend:3000
RELAYCORE_URL=http://relaycore:3001
NEUROWEAVER_BACKEND_URL=http://neuroweaver-backend:8001
NEUROWEAVER_FRONTEND_URL=http://neuroweaver-frontend:3002

# External URLs (For browser access)
EXTERNAL_AUTMATRIX_BACKEND_URL=http://localhost:8000
EXTERNAL_AUTMATRIX_FRONTEND_URL=http://localhost:3000
EXTERNAL_RELAYCORE_URL=http://localhost:3001
EXTERNAL_NEUROWEAVER_BACKEND_URL=http://localhost:8001
EXTERNAL_NEUROWEAVER_FRONTEND_URL=http://localhost:3002
EXTERNAL_GRAFANA_URL=http://localhost:3003

# Development Configuration
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# RelayCore Specific
RELAYCORE_DEFAULT_MODEL=gpt-3.5-turbo
RELAYCORE_COST_THRESHOLD=10.00
RELAYCORE_ENABLE_STEERING=true

# NeuroWeaver Specific
NEUROWEAVER_MODEL_STORAGE_PATH=/app/models
NEUROWEAVER_TRAINING_ENABLED=true
NEUROWEAVER_AUTO_DEPLOY=false

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_TIME=15d

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
ALLOWED_HOSTS=localhost,127.0.0.1,backend,relaycore,neuroweaver-backend