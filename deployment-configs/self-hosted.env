# Self-hosted Deployment Configuration
# Complete configuration for on-premise/self-hosted deployments

# ==================================================
# DEPLOYMENT TYPE & ENVIRONMENT
# ==================================================
VITE_DEPLOYMENT_TYPE=self-hosted
NODE_ENV=production
VITE_ENVIRONMENT=self-hosted

# ==================================================
# LOCAL DEPLOYMENT CONFIGURATION
# ==================================================
VITE_API_BASE_URL=http://localhost:3001/api/v1
VITE_WS_BASE_URL=ws://localhost:3001
VITE_LOCAL_DEPLOYMENT=true
VITE_OFFLINE_MODE_SUPPORTED=true

# ==================================================
# LICENSE & ACTIVATION
# ==================================================
VITE_LICENSE_KEY=XXXX-XXXX-XXXX-XXXX
VITE_LICENSE_VALIDATION_URL=http://localhost:3001/api/license/validate
VITE_LICENSE_ACTIVATION_REQUIRED=true

# ==================================================
# LOCAL AI MODEL CONFIGURATION
# ==================================================
VITE_ENABLE_LOCAL_MODELS=true
VITE_LOCAL_MODEL_PATH=/opt/auterity/models
VITE_GPU_SUPPORT_ENABLED=true
VITE_GPU_MEMORY_ALLOCATION=0.8
VITE_MODEL_CACHE_PATH=/var/cache/auterity/models

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
VITE_DATABASE_TYPE=postgresql
VITE_DATABASE_HOST=localhost
VITE_DATABASE_PORT=5432
VITE_DATABASE_NAME=auterity_error_iq
VITE_DATABASE_SSL=false
VITE_DATABASE_CONNECTION_POOL_SIZE=20

# ==================================================
# REDIS & CACHING
# ==================================================
VITE_REDIS_ENABLED=true
VITE_REDIS_HOST=localhost
VITE_REDIS_PORT=6379
VITE_REDIS_PASSWORD=
VITE_CACHE_TTL=3600000
VITE_SESSION_STORE=redis

# ==================================================
# FILE STORAGE CONFIGURATION
# ==================================================
VITE_STORAGE_TYPE=local
VITE_STORAGE_PATH=/var/lib/auterity/storage
VITE_BACKUP_PATH=/var/backups/auterity
VITE_BACKUP_RETENTION_DAYS=30
VITE_STORAGE_ENCRYPTION_ENABLED=true

# ==================================================
# SECURITY CONFIGURATION
# ==================================================
VITE_SECURITY_LEVEL=custom
VITE_ENCRYPTION_KEY_SOURCE=local
VITE_JWT_SECRET=your_local_jwt_secret
VITE_SESSION_TIMEOUT=28800
VITE_PASSWORD_POLICY=custom
VITE_AUDIT_LOG_ENABLED=true
VITE_AUDIT_LOG_PATH=/var/log/auterity/audit.log

# ==================================================
# NETWORK CONFIGURATION
# ==================================================
VITE_HTTP_PORT=3000
VITE_HTTPS_ENABLED=true
VITE_SSL_CERT_PATH=/etc/ssl/certs/auterity.crt
VITE_SSL_KEY_PATH=/etc/ssl/private/auterity.key
VITE_CORS_ORIGINS=["http://localhost:3000","https://localhost:3443"]

# ==================================================
# MONITORING & LOGGING
# ==================================================
VITE_LOG_LEVEL=info
VITE_LOG_PATH=/var/log/auterity
VITE_METRICS_ENABLED=true
VITE_METRICS_PORT=9090
VITE_HEALTH_CHECK_ENABLED=true
VITE_HEALTH_CHECK_PATH=/health

# ==================================================
# AI SERVICE CONFIGURATION
# ==================================================
VITE_AI_MODE=hybrid
VITE_LOCAL_AI_PRIORITY=true
VITE_OPENAI_FALLBACK_ENABLED=true
VITE_MODEL_LOADING_STRATEGY=lazy
VITE_MAX_CONCURRENT_INFERENCES=10

# ==================================================
# WORKFLOW ENGINE
# ==================================================
VITE_WORKFLOW_ENGINE=embedded
VITE_TEMPORAL_ENABLED=true
VITE_TEMPORAL_FRONTEND_PORT=7233
VITE_WORKFLOW_STORAGE_PATH=/var/lib/auterity/workflows
VITE_WORKFLOW_TIMEOUT_DEFAULT=3600

# ==================================================
# INTEGRATION ENDPOINTS
# ==================================================
VITE_INTEGRATION_ENDPOINTS={
  "n8n": "http://localhost:5678",
  "relaycore": "http://localhost:4000",
  "neuroweaver": "http://localhost:5000"
}

# ==================================================
# CUSTOMIZATION OPTIONS
# ==================================================
VITE_CUSTOM_BRANDING_ENABLED=true
VITE_CUSTOM_LOGO_PATH=/opt/auterity/assets/logo.png
VITE_CUSTOM_THEME_PATH=/opt/auterity/themes/custom.json
VITE_CUSTOM_WORKFLOW_TEMPLATES=true

# ==================================================
# PERFORMANCE TUNING
# ==================================================
VITE_MEMORY_LIMIT=4096MB
VITE_CPU_CORES=8
VITE_WORKER_PROCESSES=4
VITE_CONNECTION_POOL_MAX=100
VITE_REQUEST_TIMEOUT=30000

# ==================================================
# BACKUP & RECOVERY
# ==================================================
VITE_BACKUP_ENABLED=true
VITE_BACKUP_SCHEDULE="0 2 * * *"
VITE_BACKUP_RETENTION=30
VITE_AUTO_RECOVERY_ENABLED=true
VITE_RECOVERY_POINT_OBJECTIVE=3600

# ==================================================
# MAINTENANCE & UPDATES
# ==================================================
VITE_AUTO_UPDATES_ENABLED=true
VITE_UPDATE_CHECK_INTERVAL=86400
VITE_MAINTENANCE_WINDOW="sunday 02:00"
VITE_MAINTENANCE_NOTIFICATION_ENABLED=true

# ==================================================
# COMPLIANCE & AUDITING
# ==================================================
VITE_COMPLIANCE_MODE=strict
VITE_AUDIT_LEVEL=detailed
VITE_DATA_RETENTION_POLICY=custom
VITE_PII_MASKING_ENABLED=true
VITE_ACCESS_LOGGING_ENABLED=true

# ==================================================
# ADMIN CONFIGURATION
# ==================================================
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_EMAIL=admin@localhost
VITE_INITIAL_SETUP_REQUIRED=true
VITE_SETUP_WIZARD_ENABLED=true

# ==================================================
# DEVELOPMENT & DEBUGGING
# ==================================================
VITE_DEBUG_MODE=false
VITE_DEVELOPMENT_TOOLS_ENABLED=false
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_STACK_TRACES=false
