{
  "name": "auterity-unified-platform",
  "version": "1.0.0",
  "description": "Unified AI Platform with 25+ integrated services",
  "private": true,
  "workspaces": [
    "apps/workflow-studio",
    "packages/design-system",
    "packages/workflow-contracts",
    "packages/shared-ui",
    "frontend",
    "shared",
    "systems/relaycore",
    "systems/neuroweaver",
    "apps/api"
  ],
  "scripts": {
    "dev": "docker-compose -f docker-compose.unified.yml up -d",
    "dev:logs": "docker-compose -f docker-compose.unified.yml logs -f",
    "dev:stop": "docker-compose -f docker-compose.unified.yml down",
    "dev:workflow-studio": "npm run dev --workspace=apps/workflow-studio",
    "prod": "docker-compose -f docker-compose.unified.yml -f docker-compose.production.yml up -d",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && python -m pytest",
    "test:workflow-studio": "npm run test --workspace=apps/workflow-studio",
    "test:integration": "cd tests/integration && python -m pytest",
    "test:e2e": "cd tests/e2e && npm run test",
    "test:coverage": "npm run test:coverage:frontend && npm run test:coverage:backend",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:coverage:backend": "cd backend && python -m pytest --cov=. --cov-report=xml",
    "test:coverage:workflow-studio": "npm run test:coverage --workspace=apps/workflow-studio",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && python -m flake8",
    "lint:workflow-studio": "npm run lint --workspace=apps/workflow-studio",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && python -m black . && python -m isort .",
    "lint:fix:workflow-studio": "npm run lint:fix --workspace=apps/workflow-studio",
    "build": "npm run build:frontend && npm run build:backend && npm run build:workflow-studio",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && python -m py_compile app/main.py",
    "build:workflow-studio": "npm run build --workspace=apps/workflow-studio",
    "build:all": "npm run build --workspaces",
    "type-check": "npm run type-check:frontend && npm run type-check:workflow-studio",
    "type-check:frontend": "cd frontend && npx tsc --noEmit",
    "type-check:workflow-studio": "npm run type-check --workspace=apps/workflow-studio",
    "security-scan": "npm run security-scan:frontend && npm run security-scan:backend",
    "security-scan:frontend": "cd frontend && npm audit --audit-level moderate",
    "security-scan:backend": "cd backend && python -m bandit -r . -f json -o security-report.json",
    "security-scan:workflow-studio": "npm run security-scan --workspace=apps/workflow-studio",
    "performance-test": "npm run performance-test:frontend && npm run performance-test:workflow-studio",
    "performance-test:frontend": "cd frontend && npm run performance-test",
    "performance-test:workflow-studio": "npm run performance-test --workspace=apps/workflow-studio",
    "quality-gate": "npm run type-check && npm run lint && npm run test && npm run security-scan && npm run performance-test",
    "quality-gate:ci": "npm run quality-gate && npm run build",
    "pre-commit": "npm run quality-gate",
    "pre-push": "npm run test:coverage",
    "health-check": "./scripts/health-check.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:workflow-studio:staging": "npm run deploy:staging --workspace=apps/workflow-studio",
    "deploy:workflow-studio:production": "npm run deploy:production --workspace=apps/workflow-studio",
    "docs:generate": "npm run docs:generate:api && npm run docs:generate:coverage",
    "docs:generate:api": "cd backend && python -m sphinx docs/ _build/html",
    "docs:generate:coverage": "cd frontend && npm run test:coverage && npx istanbul report html",
    "contracts:build": "cd packages/workflow-contracts && npm run build",
    "contracts:test": "cd packages/workflow-contracts && npm run test",
    "api:dev": "cd apps/api && npm run dev",
    "api:test": "cd apps/api && npm run test",
    "api:smoke": "cd apps/api && pwsh ./smoke-test.ps1",
    "workflow:test-all": "npm run contracts:test && npm run api:test && npm run test:workflow-studio"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@xyflow/react": "^12.8.4",
    "ai": "latest",
    "@ai-sdk/anthropic": "latest",
    "@ai-sdk/azure": "latest",
    "@ai-sdk/cohere": "latest",
    "@ai-sdk/google": "latest",
    "@ai-sdk/openai": "latest",
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "@langchain/anthropic": "^0.3.0",
    "@langchain/google-genai": "^0.1.0",
    "@langchain/cohere": "^0.3.0",
    "langchain": "^0.3.0",
    "litellm": "^1.50.0",
    "@huggingface/transformers": "^3.0.0",
    "@huggingface/hub": "^0.16.0",
    "autogen": "^0.0.1",
    "temporalio": "^1.10.0",
    "@temporalio/worker": "^1.10.0",
    "@temporalio/workflow": "^1.10.0",
    "@temporalio/client": "^1.10.0",
    "wandb": "^0.17.0",
    "axios": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.541.0",
    "morgan": "^1.10.1",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  }
}
