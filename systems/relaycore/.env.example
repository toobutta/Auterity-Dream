# RelayCore Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/relaycore

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# NeuroWeaver Integration
NEUROWEAVER_BACKEND_URL=http://localhost:3002

# Cost Optimization
DEFAULT_BUDGET_LIMIT=100.00
COST_OPTIMIZATION_STRATEGY=balanced

# Metrics Configuration
METRICS_BUFFER_SIZE=100
METRICS_FLUSH_INTERVAL=30000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000