{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@providers/*": ["src/providers/*"],
      "@cache/*": ["src/cache/*"],
      "@optimization/*": ["src/optimization/*"],
      "@analytics/*": ["src/analytics/*"],
      "@batch/*": ["src/batch/*"],
      "@plugins/*": ["src/plugins/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "dashboard"]
}