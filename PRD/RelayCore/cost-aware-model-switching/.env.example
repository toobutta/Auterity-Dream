# Server Configuration
NODE_ENV=development
PORT=3002
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/cost_aware_db
REDIS_HOST=redis
REDIS_PORT=6379

# Integration URLs
RELAYCORE_API_URL=http://relaycore:3000
AUTERITY_API_URL=http://auterity:3001

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Default Budget Settings
DEFAULT_WARNING_THRESHOLD=70
DEFAULT_CRITICAL_THRESHOLD=90
DEFAULT_WARNING_ACTION=notify
DEFAULT_CRITICAL_ACTION=restrict-models
DEFAULT_EXHAUSTED_ACTION=block-all

# Token Estimation Cache
TOKEN_CACHE_TTL=86400  # 24 hours in seconds

# Model Selection Settings
DEFAULT_QUALITY_REQUIREMENT=standard
ENABLE_FALLBACK_CHAINS=true