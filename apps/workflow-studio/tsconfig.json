{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@auterity/*": ["../../packages/*/src"],
      "@shared/*": ["../../shared/src/*"],
      "@design-system/*": ["../design-system/src/*"],
      "@relaycore/*": ["../../systems/relaycore/src/*"],
      "@neuroweaver/*": ["../../systems/neuroweaver/src/*"],
      "@workflow-contracts/*": ["../../packages/workflow-contracts/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../../packages/design-system"
    },
    {
      "path": "../../packages/workflow-contracts"
    }
  ]
}
