{
  "enabled": true,
  "name": "Frontend Lint & Type Check",
  "description": "Run ESLint and TypeScript type checking on frontend files",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": ["frontend/src/**/*.ts", "frontend/src/**/*.tsx"]
  },
  "then": {
    "type": "runCommand",
    "command": "cd frontend && npx eslint \"${file}\" --fix && npx tsc --noEmit && echo \"âœ… Frontend code looks good\""
  }
}