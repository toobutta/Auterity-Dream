{
  "enabled": true,
  "name": "Auto-Test on Save",
  "description": "Run relevant tests when backend Python files are saved",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": ["backend/**/*.py"],
    "excludePatterns": ["**/test_*.py", "**/__pycache__/**"]
  },
  "then": {
    "type": "runCommand",
    "command": "cd backend && BASE_NAME=$(basename \"${file}\" .py) && TEST_FILE=\"tests/test_${BASE_NAME}.py\" && if [ -f \"$TEST_FILE\" ]; then echo \"ðŸ§ª Running tests for ${BASE_NAME}...\" && python -m pytest \"$TEST_FILE\" -v; else echo \"ðŸ§ª Running all tests...\" && python -m pytest tests/ -x --tb=short; fi"
  }
}
