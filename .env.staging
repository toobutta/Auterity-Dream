# Staging Environment Configuration
# Copy this file to .env for staging deployment

# Database Configuration
POSTGRES_DB=workflow_engine_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_postgres_password
POSTGRES_PORT=5432

# Application Database URL
DATABASE_URL=postgresql://postgres:staging_postgres_password@postgres:5432/workflow_engine_staging

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
SECRET_KEY=staging_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application Configuration
ENVIRONMENT=staging
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://staging.yourdomain.com

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443
